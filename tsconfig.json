{
  "compilerOptions": {
    /* ===============================
       BASE
    =============================== */
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    /* ===============================
       JS / TS
    =============================== */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    /* ===============================
       MODULE SYSTEM
    =============================== */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ===============================
       REACT / NEXT
    =============================== */
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ===============================
       NODE (ðŸ”¥ CLAVE PARA API ROUTES)
    =============================== */
    "types": ["node"],

    /* ===============================
       PATH ALIASES
    =============================== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  /* ===============================
     FILES INCLUDED
  =============================== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  /* ===============================
     FILES EXCLUDED
  =============================== */
  "exclude": [
    "node_modules",
    "functions"
  ]
}
